@page
@model StudentEnrollmentSystem.Pages.Enquiry.ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}
<link rel="stylesheet" href="~/css/enquiry.css">

<div class="row justify-content-center">
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="col-md-6 col-lg-4 w-75">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">Contact Us</h2>
                <form id="enquiryForm" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-0">Category<span style="color:red;">*</span></label>
                        <select class="form-control" asp-for="Enquiry.Category">
                            <option value="">Select a category</option>
                            <option value="Registry">Registry</option>
                            <option value="Scholarship">Scholarship</option>
                            <option value="Finance">Finance</option>
                        </select>
                        <span asp-validation-for="Enquiry.Category" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-0">Subject<span style="color:red;">*</span></label>
                        <input asp-for="Enquiry.Subject" class="form-control"  />
                        <span asp-validation-for="Enquiry.Subject" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-0">Message<span style="color:red;">*</span></label>
                        <textarea asp-for="Enquiry.Message" class="form-control"  rows="3"></textarea>
                        <span asp-validation-for="Enquiry.Message" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-0">Related Files (JPG, PNG, PDF - Max 5MB)</label>
                        <input type="file" class="form-control" id="fileInput" asp-for="UploadedFiles" multiple />
                        <ul id="fileList" class="list-group mt-2"></ul>
                        <span id="fileError" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary w-25" id="submitBtn">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Past Enquiries Section -->
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <h3 class="text-center mb-4">Your Past Enquiries</h3>
        @if (!Model.PastEnquiries.Any())
        {
            <p class="text-center">You have not submitted any enquiries yet.</p>
        }
        else
        {
            @foreach (var enquiry in Model.PastEnquiries)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">@enquiry.Subject <small class="text-muted">(@enquiry.Category)</small></h5>
                        <small class="text-muted">Submitted on @enquiry.CreatedDate.ToString("yyyy-MM-dd HH:mm")</small>
                    </div>
                    <div class="card-body">
                        <p>@enquiry.Message</p>
                        @if (enquiry.EnquiryFiles.Any())
                        {
                            <h6>Attachments:</h6>
                            <ul class="list-unstyled">
                                @foreach (var file in enquiry.EnquiryFiles)
                                {
                                    var fileName = file.FilePath.Split('/').Last();
                                    <li><a href="@file.FilePath" target="_blank" class="text-primary">Download: @fileName</a></li>
                                }
                            </ul>
                        }
                        @if (enquiry.Responses.Any())
                        {
                            <h6>Responses:</h6>
                            <div class="list-group">
                                @foreach (var response in enquiry.Responses)
                                {
                                    <div class="list-group-item">
                                        <p class="mb-1">@response.Comment</p>
                                        <small class="text-muted">By @response.User.FullName on @response.ResponseDate.ToString("yyyy-MM-dd HH:mm")</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No responses yet.</p>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Modal for File Preview -->
<div class="modal fade" id="filePreviewModal" tabindex="-1" aria-labelledby="filePreviewLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filePreviewLabel">File Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="imagePreview" src="" class="img-fluid" style="max-height: 300px; display: none;" />
                <p id="fileMessage" class="text-muted"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/enquiry.js" asp-append-version="true"></script>
}