@page
@model StudentEnrollmentSystem.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">Forgot Your Password?</h2>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="UserID" class="form-label fw-bold">User ID</label>
                        <input asp-for="UserID" class="form-control" />
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="Input.NewPassword">New Password</label>
                        <input asp-for="Input.NewPassword" type="password" class="form-control" id="newPassword" required />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="Input.ConfirmNewPassword">Confirm New Password</label>
                        <input asp-for="Input.ConfirmNewPassword" type="password" class="form-control" id="confirmNewPassword" required />
                        <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="checkbox" id="toggle-password"> Show Password
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                </form>
                <div class="text-center mt-3">
                    <p>Back to <a asp-page="/Account/Login">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const passwordInputs = document.querySelectorAll('input[type="password"]');
            const togglePasswordCheckbox = document.getElementById('toggle-password');

            if (togglePasswordCheckbox) {
                togglePasswordCheckbox.addEventListener('change', function () {
                    passwordInputs.forEach(input => {
                        input.type = togglePasswordCheckbox.checked ? 'text' : 'password';
                    });
                });
            }
        });
    </script>
}
